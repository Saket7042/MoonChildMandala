<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="2dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/moonIndicator"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:src="@mipmap/ic_launcher"
            app:layout_constraintBottom_toTopOf="@id/moon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_weight="0.20" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/moon"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:src="@mipmap/ic_launcher"
            app:layout_constraintBottom_toTopOf="@id/tvText"
            app:layout_constraintTop_toBottomOf="@id/moonIndicator"
            app:layout_constraintVertical_weight="0.45" />

        <TextView
            android:id="@+id/tvText"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:text="1234"
            android:textSize="8sp"
            android:textColor="@color/black"
            app:layout_constraintBottom_toTopOf="@id/ivStar"
            app:layout_constraintTop_toBottomOf="@id/moon"
            app:layout_constraintVertical_weight="0.20" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivStar"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:src="@mipmap/ic_launcher"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvText"
            app:layout_constraintVertical_weight="0.15" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</merge>